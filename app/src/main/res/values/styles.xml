<resources>

    <!-- Base application theme. -->
    <style name="MaterialTheme" parent="ParentMaterialTheme">

        <!-- base theme that will draw all features presents inside ParentMaterialTheme -->
    </style>
    
    

    <!-- this is super class of MaterialTheme -->
    <style name="ParentMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item> <!-- TOOLBAR (APPLICATION) -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!-- STATUS BAR (BATTERY...)-->
        <item name="android:textColorPrimary">@color/colorTextPrimary</item> <!-- Text in ToolBar -->
        <item name="android:windowBackground">@color/colorPrimaryBg</item> <!-- background of application -->
        <item name="android:textColorSecondary">@color/colorTextPrimary</item> <!-- color of back arrow and 3 dots for  -->
        <item name="colorAccent">@color/colorAccent</item> <!-- color for item selected -->
    </style>
    
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/holo_red_dark</item>
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
</resources>
